TEST=test.jpl

CXXFLAGS=-Og -std=c++17 -Werror -Wall -fsanitize=address,undefined -fno-sanitize-recover=address,undefined

all: run

compile: compiler.o

compiler.o: compiler.cpp
	g++ $(CXXFLAGS) -c compiler.cpp -o compiler.o

a.out: compiler.o
	g++ $(CXXFLAGS) compiler.o -o a.out

run: a.out
	./a.out $(TEST)

clean:
	rm -fr *.o a.out
